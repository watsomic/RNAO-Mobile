<?xml version="1.0" encoding="UTF-8"?>
<!-- Widget Configuration Reference:
       http://docs.blackberry.com/en/developers/deliverables/15274/ -->
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:rim="http://www.blackberry.com/ns/widgets" version="1.2.1">
  <name>RNAO</name>
  <description>
    This application includes adapted content from the Nursing Best Practice Guidelines that are published by the Registered Nurses' Association of Ontario (RNAO).  

    The Nursing Best Practice Guidelines are funded by the Ontario Ministry of Health and Long-Term Care.
  </description>

  <feature id="blackberry.system" required="true" version="1.0.0.0"/>
  <feature id="phonegap" required="false" version="1.0.0"/>
  <feature id="blackberry.find" required="true" version="1.0.0.0"/>
  <feature id="blackberry.identity" required="true" version="1.0.0.0"/>
  <feature id="blackberry.pim.Address" required="true" version="1.0.0.0"/>
  <feature id="blackberry.pim.Contact" required="true" version="1.0.0.0"/>
  <feature id="blackberry.io.file" required="true" version="1.0.0.0"/>
  <feature id="blackberry.utils" required="true" version="1.0.0.0"/>
  <feature id="blackberry.io.dir" required="true" version="1.0.0.0"/>
  
  <feature id="blackberry.invoke" version="1.0.0"/>
  <feature id="blackberry.invoke.BrowserArguments" version="1.0.0"/>
  
  <access subdomains="true" uri="file:///store/home"/>
  <access subdomains="true" uri="file:///SDCard"/>
  <access subdomains="true" uri="http://pda.rnao-dev.org"/>
  <access subdomains="true" uri="http://pda.rnao.ca"/>

  <icon rim:hover="false" src="resources/icon.png"/>
  <icon rim:hover="true" src="resources/icon_hover.png"/>

  <content src="index.html"/>

  <rim:loadingScreen backgroundColor="#25756f" foregroundImage="resources/loading_foreground.png" onFirstLaunch="true" />
</widget>
